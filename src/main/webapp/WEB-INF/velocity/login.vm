<html>
<head>
<title>Login</title>
</head>
<body>
<h2>Login:</h2>

	<form action="j_spring_security_check" method="post">
		<table>
			<tr>
				<td><label for="username">#springMessage("user.username"):</label></td>
				<td><input id="username" type="text" name="j_username"></td>
				#springShowErrors("" "")
			</tr>
			<tr>
				<td><label for="password">#springMessage("user.password"):</label></td>
				<td><input id="password" type="password" name="j_password"></td>
				#springShowErrors("" "")
			</tr>
			<tr>
				<td><input type="submit" value="Login" ></td>
			</tr>
		</table>
	</form>

	<a href="#springUrl("/register")">Register</a>

</body>
</html>