<!DOCTYPE html>
<html>
<head>
#parse("include.vm")
<title>#springMessage("adjustment.navbar")</title>
</head>
<body>
	<div id="wrapper">
		#parse("header.vm")
		<div id="container">
			<div class="nav_menu">
				<ul>
					<li><a href="#springUrl("/overview")">Overview</a></li>
					<li><a class="active" href="#springUrl("/adjustment")">#springMessage("adjustment.navbar")</a></li>
					<li><a href="#springUrl("/calculation")">Calculations</a></li>
					<li><a href="#springUrl("/import/xml")">Import</a></li>
					<li><a href="#springUrl("/export")">Export</a></li>
				</ul>
			</div>
			<div id="content">
				<h1 style="font-size: 20px;">Wizard Form</h1>
				<p>#springMessage("controller") ${time} ms</p>
				<a id="ajax_btn" href>GetJSON</a> <a id="ajax_reset" href>Reset</a>
				<div id="ajax_result"></div>
			</div>
		</div>
	</div>
	#parse("footer.vm")
	<script>
		function doAjaxGet() {
			jQuery.ajax({
				type : 'GET',
				url : '#springUrl("/adjustment/index")',
				dataType : 'html',
				async : true,
				success : function(result) {
					jQuery('#ajax_result').hide("drop", { direction: "left" }, 500, function() {jQuery('#ajax_result').html(result);});
					jQuery('#ajax_result').show("drop", { direction: "right" }, 500);
					return false;
				}
			});
		}
	</script>
</body>
</html>