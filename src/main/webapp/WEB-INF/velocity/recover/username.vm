<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
#parse("include.vm")
<title>Registration</title>
</head>
<body>
	<div id="wrapper">
		#parse("header.vm")
		<div id="container">
			<div id="signup_container">
				<div class="panel_header">
					<h2>Find Username</h2>
				</div>
				<div id="dialog_container">
					<p>Please enter the email address you registered with. Your
						username will be sent to this email address shortly.</p>
					<br>
					<form action="" method="post">
						<div class="large_form_element">
							<label for="email">Email:</label>
							<div class="input">#springFormInput("user.email", "")
								#showElementErrors()</div>
						</div>
						<div class="form_buttons">
							<input type="submit" class="submit_btn" value="Find">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	#parse("footer.vm")
</body>
</html>