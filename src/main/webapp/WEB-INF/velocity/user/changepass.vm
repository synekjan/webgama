<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
#parse("include.vm")
<title>#springMessage("change.password")</title>
</head>
<body>
	<div id="wrapper">
		#parse("header.vm")

		<div id="breadcrumbs">
			<a class="blue" href="#springUrl("/")">WebGama</a> > <a href="#springUrl("/user/info")">#springMessage("user.settings")</a> > <a href="#springUrl("/user/password/change")"><span class="active">#springMessage("change.password")</span></a>
		</div>

		<div class="left_menu">
			<ul>
				<li><a href="#springUrl("/user/info")">#springMessage("user.general.settings")</a></li>
				<span class="active_menu"><li><a href="#springUrl("/user/password/change")">#springMessage("change.password")</a></li></span>
				<li><a href="#springUrl("/user/logins/show")">#springMessage("logins.list")</a></li>
				<li><a href="#springUrl("/user/delete")">#springMessage("delete.account")</a></li>
			</ul>
		</div>

		<div id="container">

			<h2>#springMessage("change.password")</h2>
			<br>
			<form action="" method="post">
				<div class="form">
					<fieldset>
						<legend>#springMessage("change.password")</legend>
						<table>
							<tr>
								<td>Username:</td>
								<td>$user.username</td>
								<td><input type="hidden" name="username" value="$user.username"></td>
							</tr>
							<tr>
								<td><label for="oldPassword">#springMessage("user.current.password"):</label></td>
								<td>#springFormPasswordInput("user.oldPassword", "")</td>
								<td>#springShowErrors("&nbsp", "form_errors")</td>
							</tr>
							<tr>
								<td><label for="newPassword">#springMessage("user.new.password"):</label></td>
								<td>#springFormPasswordInput("user.newPassword", "")</td>
								<td>#springShowErrors("&nbsp", "form_errors")</td>
							</tr>
							<tr>
								<td><label for="confirmNewPassword">#springMessage("user.confirm.new.password"):</label></td>
								<td>#springFormPasswordInput("user.confirmNewPassword", "")</td>
								<td>#springShowErrors("&nbsp", "form_errors")</td>
							</tr>
						</table>
					</fieldset>
				</div>
				<br> <input type="submit" value="#springMessage("change.password.button")"><input type="reset" value="Reset">
			</form>
		</div>
		#parse("footer.vm")
	</div>
</body>
</html>