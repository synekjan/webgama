<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
#parse("include.vm")
<title>#springMessage("delete.account")</title>
</head>
<body>
	<div id="wrapper">
		#parse("header.vm")

		<div id="breadcrumbs">
			<a class="blue" href="#springUrl("/")">WebGama</a> > <a href="#springUrl("/user/info")">#springMessage("user.settings")</a> > <a href="#springUrl("/user/delete")"><span class="active">#springMessage("delete.account")</span></a>
		</div>

		<div class="left_menu">
			<ul>
				<li><a href="#springUrl("/user/info")">#springMessage("user.general.settings")</a></li>
				<li><a href="#springUrl("/user/password/change")">#springMessage("change.password")</a></li>
				<li><a href="#springUrl("/user/logins/show")">#springMessage("logins.list")</a></li>
				<span class="active_menu"><li><a href="#springUrl("/user/delete")">#springMessage("delete.account")</a></li></span>
			</ul>
		</div>

		<div id="container">

			<h2>#springMessage("delete.account")</h2>
			<br>
			<form action="" method="post">
				<input type="submit" value="#springMessage("delete.account.button")">
			</form>
		</div>
		#parse("footer.vm")
	</div>
</body>
</html>