<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- Scheduled methods  -->
	<bean id="userJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="userDao" />
		<property name="targetMethod" value="clearConfirmations" />
	</bean>
	
	<bean id="eraseTmpJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="fileEraser" />
		<property name="targetMethod" value="eraseTemporaryFiles" />
	</bean>
	
	<!-- Triggers  -->
	<bean id="userJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="userJobDetail" />
		<property name="startDelay" value="20000" />
		<property name="cronExpression" value="0 1 0 1/1 * ? *" />
	</bean>
	
	<bean id="eraseTmpTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="eraseTmpJobDetail" />
		<property name="startDelay" value="21000" />
		<property name="cronExpression" value="0 21 0/3 1/1 * ? *" />
	</bean>
	
	<!-- Register trigger -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="userJobTrigger" />
				<ref bean="eraseTmpTrigger" />
			</list>
		</property>
	</bean>

</beans>
